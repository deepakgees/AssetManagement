{
  "name": "zerodha-portfolio-backend",
  "version": "1.0.0",
  "description": "Backend for Asset Management",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --config nodemon.json",
    "dev:direct": "ts-node src/index.ts",
    "debug": "node --inspect --require ts-node/register src/index.ts",
    "debug-brk": "node --inspect-brk --require ts-node/register src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "node scripts/seed-database.js",
    "db:seed:ts": "ts-node scripts/seed-database.ts",
    "db:reset": "npm run db:push && npm run db:seed",
    "logs:summary": "node scripts/log-analyzer.js summary",
    "logs:errors": "node scripts/log-analyzer.js errors",
    "logs:http": "node scripts/log-analyzer.js http",
    "logs:recent": "node scripts/log-analyzer.js recent",
    "logs:search": "node scripts/log-analyzer.js search",
    "logs:cleanup": "ts-node scripts/cleanup-old-logs.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@types/winston": "^2.4.4",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "kiteconnect": "^4.1.0",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^13.3.2",
    "speakeasy": "^2.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.5",
    "nodemon": "^3.0.2",
    "prisma": "^6.16.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
